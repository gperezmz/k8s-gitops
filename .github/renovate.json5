{
  "enabled": true,
  "timezone": "Europe/Madrid",
  "semanticCommits": true,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard",
  "commitMessageSuffix": "[ci-skip]",
  "commitBody": "Signed-off-by: Guillermo PÃ©rez <gperezmz@users.noreply.github.com>",
  // Do not notify on closed unmerged PRs
  "suppressNotifications": ["prIgnoreNotification"],
  // Do not rebase PRs
  "rebaseWhen": "conflicted",
  "assignees": ["@gperezmz"],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"],
    "ignorePaths": [
      "cluster/flux-system/",
      ".github"
    ]
  },
  "regexManagers": [
    {
      "fileMatch": ["./.+\\.yaml$"],
      "matchStrings": [
        "registryUrl=(?<registryUrl>.*?)\n *chart: (?<depName>.*?)\n *version: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": ["./.+\\.yaml$"],
      "matchStrings": [
        "image:\n *repository: (?<depName>.*?)\n *tag: (?<currentValue>.*)\n"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "fileMatch": ["./.+\\.yaml$"],
      "matchStrings": [
        "\/prometheus-operator\/v(?<currentValue>.*?)\/"
      ],
      "depNameTemplate": "quay.io/prometheus-operator/prometheus-operator",
      "datasourceTemplate": "docker"
    }
  ],
  "enabledManagers": ["regex", "github-actions", "pre-commit"],
  "packageRules": [
    // Setup datasources
    {
      "datasources": ["helm"],
      "separateMinorPatch": true
    },
    // Global docker datasource settings
    {
      "datasources": ["docker"],
      "enabled": true,
      "commitMessageExtra": "to {{#if isSingleVersion}}v{{{toVersion}}}{{else}}{{{newValue}}}{{/if}}",
      "updateTypes": ["major", "minor", "patch"],
      "separateMinorPatch": true
    },
    // Add labels according to package and update types
    {
      "datasources": ["docker"],
      "updateTypes": ["major"],
      "labels": ["renovate/image-release", "dependency/major"],
      "enabled": true
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["minor"],
      "labels": ["renovate/image-release", "dependency/minor"]
    },
    {
      "datasources": ["docker"],
      "updateTypes": ["patch"],
      "labels": ["renovate/image-release", "dependency/patch"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["major"],
      "labels": ["renovate/helm-release", "dependency/major"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["minor"],
      "labels": ["renovate/helm-release", "dependency/minor"]
    },
    {
      "datasources": ["helm"],
      "updateTypes": ["patch"],
      "labels": ["renovate/helm-release", "dependency/patch"]
    },
    // Custom versions
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^nightly-3\\.(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "packageNames": ["ghcr.io/hotio/sonarr", "ghcr.io/hotio/radarr"]
    },
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^release-0\\.(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "packageNames": ["ghcr.io/hotio/bazarr"]
    },
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "packageNames": ["ghcr.io/hotio/jackett"]
    },
    {
      "datasources": ["docker"],
      "versionScheme": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-(?<prerelease>.*))?$",
      "packageNames": ["ghcr.io/linuxserver/unifi-controller"]
    },
    {
      "datasources": ["docker"],
      "versioning": "loose",
      "packageNames": ["plexinc/pms-docker"]
    },
    // Enable auto-updates
    {
      "datasources": ["docker"],
      "automerge": true,
      "requiredStatusChecks": null,
      "updateTypes": ["minor", "patch"],
      "packageNames": [
        "plexinc/pms-docker"
      ]
    }
  ]
}